                                i.fa.fa-times(aria-hidden="true", title="Удалить")
                            div.timeline-event-item-body.flex.flex-wrap
                                span.summ Сумма: 200
                                span.currency Валюта: Р.
                                span.author От кого: OOO "Трансгаз"
                            p.timeline-event-item-footer.negative
                                i.fa.fa-minus-square(aria-hidden="true")
                            div.date-content
