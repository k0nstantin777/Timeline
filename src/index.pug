                            div.timeline-event-item-body
                                span.summ Сумма: 200
                                span.currency Валюта: Р.
                                span.author От кого: OOO "Трансгаз"
                            div.timeline-event-item-footer.negative
                                i.fa.fa-plus-square(aria-hidden="true")
                            div.date-content
                                div.date-content-wrapper
                                    span.point 
                                    div.line
                                    p.date 7.12.2017г.   
                    div.timeline-line
                    div.timeline-column.flex.direction-column.right
                        div.timeline-event.timeline-event-item.transaction
